fireball:{
  "name":"Fireball",
  "desc":"Shoot a fireball at an enemy.",
  "attackTypes":["magic","ranged"],
  "range":3,
  "sight":true,

  "Prerequisites":[//if all stats are between min and max do
    ["health",15,99999],
    ["stamina",2,99999],
    ["health",1,99999],
    ["intelligence",7,99999],
    ["Intoxication",0,25],
    ["player.elementalAffinity.fire",5,99999]
  ],

  "ManaUsage":15,
  "StaminaUsage":2,
  "HealthUsage":1,
  "damage":20,

  "AOE":1,//any enemy within one tile of the target
  "AOEShape":"circle",
  "AOEDamage":20,
  "StructureDamage":20,

  "statusEffects":[["fire",2,15]],//statuseffect,level,time
  "tileEffect":[["scorch",1,15]],//give the tile an effect (in this case decrease humidity and increase heat by 1 for 15 steps/turns)

  "specialEffects":[//Allows for basic if this and this are true do
    {
      "statement":[["target.status.fire","=",true],["target.health","=/","target.maxHealth"]],
      "do":[["target.cowardness","+","25"]]
    }
  ]
}
